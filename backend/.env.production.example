# Production Environment Variables for Railway

# Server Configuration
NODE_ENV=production
PORT=3001

# Database Configuration
DB_HOST=your-database-host.railway.app
DB_PORT=5432
DB_NAME=railway
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_DIALECT=postgres

# Redis Configuration
REDIS_URL=redis://default:your-redis-password@your-redis-host.railway.app:6379

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=org-your-organization-id
OPENAI_MODEL=gpt-4-turbo-preview

# SendGrid Configuration
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@servicevision.com
SENDGRID_FROM_NAME=ServiceVision
SENDGRID_WEEKLY_LIMIT=1000

# Session Configuration
SESSION_SECRET=your-strong-session-secret

# Calendly Configuration
CALENDLY_WEBHOOK_SECRET=your-calendly-webhook-secret
CALENDLY_API_KEY=your-calendly-api-key

# CORS Configuration
CORS_ORIGINS=https://servicevision.vercel.app,https://www.servicevision.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_CHAT=true
ENABLE_EMAIL=true
ENABLE_WEBHOOKS=true